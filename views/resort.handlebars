{{!-- <div class="resortBackground"> --}}

    <div class="container">

        <div class="row section">
            {{!-- Resort Pic --}}
            <div class="col">
                <img src="http://placehold.it/300x200" srcset="http://placehold.it/300x200 300w" sizes="100vw"
                    alt="Placeholder" />
            </div>
            {{!-- Add carousel --}}
        </div>

        <div class="row section">
            <div class="col">
                {{#if user}}

                {{!-- If it matches user favorite, display filled star --}}
                {{#if checkFav}}
                <h1>{{name}}</h1>
                <i onclick="resortFav(this, {{id}}, '{{user.username}}', '{{user.fav_activity}}', {{user.id}})"
                    class="material-icons">star</i>
                {{!-- If not, display empty star --}}
                {{else}}
                <h1>{{name}}</h1>
                <i onclick="resortFav(this, {{id}}, '{{user.username}}', '{{user.fav_activity}}', {{user.id}})"
                    class="material-icons">star_border</i>
                {{/if}}

                {{!-- User who is not logged in will not see stars --}}
                {{else}}
                <h1>{{name}}</h1>
                {{/if}}
            </div>
        </div>

        <div class="row section">
            <div class="col">
                <h2>Overview</h2>
                <p>{{overview}}</p>
            </div>
        </div>
        <div class="divider"></div>

        <div class="row section">
            <div class="col">
                <h2>Location</h2>
                {{!-- Map by leaflet --}}
                <aside id="mapId"></aside>
                {{!-- <aside id="mapId" style="width: 600px; height: 400px;"></aside> --}}
                <p>Address: {{address}}</p>
                <span>Phone Number: {{phone}}</span>
            </div>
        </div>
        <div class="divider"></div>

        <section class="row section">
            <div class="col">
                <h2>Policies</h2>
                <p>{{policy}}</p>
            </div>
        </section>
        <div class="divider"></div>

        <section class="row section">
            <div class="col">
                <h2>Activities</h2>
                <ul>
                    {{#each activityList}}
                    <li><a href="/activity/{{id}}">{{name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </section>

        {{!-- Map script file --}}
        {{> map/map-block}}
    </div>

{{!-- </div> --}}