<main class="container">
    <div class="row">
        <div class="col card hoverable s12 m6 push-m3">

            <form action="/user/login" method="POST">

                <div class="card-content">
                    <span class="signin-title">Sign in to The Cold West</span>

                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" name="username" placeholder="Username">
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input name="password" type="password" placeholder="Password">
                        </div>
                    </div>

                    {{#if error}}
                        <div class="row">
                            <div class="col s12">
                                <p class="user-error">{{error.message}}</p>
                            </div>
                        </div>
                    {{/if}}

                    <div class="row">
                        <div class="input-field col s12">
                            <button type="submit" class="btn waves-effect waves-light col s12">Sign in</button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <span class="margin medium-small">New to CW? <a href="/signup">Sign up</a></span>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>

</main>