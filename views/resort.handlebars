{{!-- <div class="resortBackground"> --}}

<main class="container">

    {{!-- Resort Pic --}}
    <section class="row section">
        <div class="col">
            <img class="responsive-img" src={{pic1}} 
                alt="Placeholder" />
        </div>
        {{!-- Add carousel --}}
        <div class="carousel">
            <img src={{pic1}} alt="placeholder">
            <img src={{pic2}} alt="placeholder">
            <img src={{pic3}} alt="placeholder">
            <img src={{pic4}} alt="placeholder">
            <img src={{pic5}} alt="placeholder">
        </div>
    </section>

    {{!-- Title --}}
    <section class="row section">
        <div class="col">
            {{#if user}}

            {{!-- If it matches user favorite, display filled star --}}
            {{#if checkFav}}
            <h1>{{name}}</h1>
            <i onclick="resortFav(this, {{id}}, '{{user.username}}', '{{user.fav_activity}}', {{user.id}})"
                class="material-icons">star</i>
            {{!-- If not, display empty star --}}
            {{else}}
            <h1>{{name}}</h1>
            <i onclick="resortFav(this, {{id}}, '{{user.username}}', '{{user.fav_activity}}', {{user.id}})"
                class="material-icons">star_border</i>
            {{/if}}

            {{!-- User who is not logged in will not see stars --}}
            {{else}}
            <h1>{{name}}</h1>
            {{/if}}
        </div>
    </section>

    {{!-- Overview --}}
    <section class="row section">
        <div class="col">
            <h2>Overview</h2>
            <p>{{{overview}}}</p>
        </div>
    </section>
    <div class="divider"></div>

    {{!-- Location --}}
    <section class="row section">
        <div class="col">
            <h2>Location</h2>
            {{!-- Map by leaflet --}}
            <aside id="map-id"></aside>
            {{!-- <aside id="mapId" style="width: 600px; height: 400px;"></aside> --}}
            <p>Address: {{address}}</p>
            <span>Phone Number: {{phone}}</span>
        </div>
    </section>
    <div class="divider"></div>

    {{!-- Policies --}}
    <section class="row section">
        <div class="col">
            <h2>Policy</h2>
            <p>{{{policy}}}</p>
        </div>
    </section>
    <div class="divider"></div>

    {{!-- List of Activity --}}
    <section class="row section">
        <div class="col">
            <h2>Activity</h2>
            <ul>
                {{#each activityList}}
                <li><a href="/activity/{{id}}">{{name}}</a></li>
                {{/each}}
            </ul>
        </div>
    </section>

    {{!-- Map script file --}}
    {{> map/map-block}}
</main>

{{!-- </div> --}}
